<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_label_speed"
        android:layout_width="124dp"
        android:layout_height="19dp"

        android:layout_marginStart="24dp"
        android:layout_marginTop="188dp"
        android:text="Speed:"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="246dp"

        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="180dp"
        android:text="0.00"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/tv_label_speed"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_label_accuracy"
        android:layout_width="76dp"

        android:layout_height="19dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="156dp"
        android:text="Accuracy:"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_accuracy"
        android:layout_width="147dp"
        android:layout_height="22dp"
        android:layout_marginStart="20dp"

        android:layout_marginTop="156dp"
        android:text="0.00"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/tv_label_accuracy"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_label_longitude"
        android:layout_width="75dp"
        android:layout_height="19dp"

        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        android:text="Longitude:"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/tv_label_accuracy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018" />

    <TextView
        android:id="@+id/tv_longitude"
        android:layout_width="113dp"
        android:layout_height="20dp"

        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:hint='"0.00"'
        android:text="0.00"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/tv_label_longitude"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_label_latitude"
        android:layout_width="75dp"
        android:layout_height="19dp"

        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="Latitude:"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_label_altitude"
        android:layout_width="75dp"
        android:layout_height="19dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="116dp"

        android:text="Altitude:"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_altitude"
        android:layout_width="154dp"
        android:layout_height="24dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:text="0.00"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/tv_label_altitude"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_latitude"
        android:layout_width="102dp"
        android:layout_height="21dp"
        android:layout_marginStart="32dp"

        android:layout_marginTop="44dp"
        android:text="0.00"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/tv_label_latitude"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="392dp"
        android:layout_height="45dp"
        android:layout_marginTop="220dp"
        android:text="Address"

        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.383" />

    <Switch
        android:id="@+id/sw_locationupdates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:minHeight="48dp"
        android:text="Location Updates"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"

        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider"
        app:layout_constraintVertical_bias="0.047" />

    <Switch
        android:id="@+id/sw_gps"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:text="GPS/Power Saving Mode"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"

        app:layout_constraintHorizontal_bias="0.685"
        app:layout_constraintStart_toEndOf="@+id/sw_locationupdates"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/tv_label_updates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="Updates:"

        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sw_locationupdates" />

    <TextView
        android:id="@+id/tv_updates"
        android:layout_width="106dp"
        android:layout_height="58dp"
        android:text="Off"

        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btn_newWaypoint"
        app:layout_constraintStart_toEndOf="@+id/tv_label_updates"
        app:layout_constraintTop_toBottomOf="@+id/sw_locationupdates"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.279" />

    <TextView
        android:id="@+id/tv_label_sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"

        android:layout_marginEnd="8dp"
        android:text="Sensor:"
        app:layout_constraintBottom_toTopOf="@+id/btn_newWaypoint"
        app:layout_constraintEnd_toStartOf="@+id/tv_sensor"
        app:layout_constraintTop_toBottomOf="@+id/sw_gps"
        app:layout_constraintVertical_bias="0.301" />

    <TextView
        android:id="@+id/tv_sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="316dp"
        android:textColor="@color/black"

        android:text="Cell Tower + Wifi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sw_gps"
        app:layout_constraintVertical_bias="0.925" />

    <ImageView
        android:id="@+id/iv_return"
        android:layout_width="43dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:onClick="goBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/previous_icon"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_newWaypoint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="212dp"
        android:text="New Waypoint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_labelCrumbCounter"
        android:textColor="@color/black"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="WayPoints:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_CountOfCrumbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"

        android:layout_marginBottom="32dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintStart_toEndOf="@+id/tv_labelCrumbCounter" />

    <Button
        android:id="@+id/btn_showWaypointList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Show Waypoint List"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_newWaypoint" />

    <Button
        android:id="@+id/btn_showMap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Show Map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_showWaypointList" />

</androidx.constraintlayout.widget.ConstraintLayout>